<section class="gh-container--section{{#match themeSection "light-gray"}} gh-section--theme-light-gray{{/match}}{{#match themeSection "black"}} gh-section--theme-black{{/match}}">
    <div class="gh-container ">
        {{#if tagName}}
            {{#get "tags" filter="slug:{{tagName}}"}}
                {{#foreach tags}}
                    <h2 class="gh-posts-section__title">
                        <a href="{{url}}" class="gh-posts-section__title-link">{{name}}</a>
                    </h2>
                {{/foreach}}
            {{/get}}
        {{/if}}

        <div class="gh-hero-wrapper--grid gh-hero-wrapper--featured-type-10-4">
            {{#if tagName}}
                {{#get "posts" limit='6' include="authors,tags" filter="tag:{{tagName}}"}}
                    {{#match posts.length "=" 6}}
                        {{#foreach posts}}

                        {{>featured-post type="10-4" lazy="true" classNames="gh-featured-post--column gh-featured-post--title-fs"}}
                                    
                        {{/foreach}}
                    {{else}}
                        <div class="gh-posts--not-enought">{{t "not enough posts"}}</div>
                    {{/match}}
                {{/get}}
            {{else}}
                {{#get "posts" limit='6' include="authors,tags" filter="featured:true" as |featuredPosts|}}
                    {{#match featuredPosts.length "=" 6}}
                        {{#foreach featuredPosts}}

                        {{>featured-post type="10-4" classNames="gh-featured-post--column gh-featured-post--title-fs"}}
                            
                        {{/foreach}}
                    {{else}}
                        <div class="gh-posts--not-enought">{{t "not enough posts"}}</div>
                    {{/match}}
                {{/get}}
            {{/if}}  
        </div>
    </div>
</section>