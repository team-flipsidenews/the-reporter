<section class="gh-container--section{{#match themeSection "light-gray"}} gh-section--theme-light-gray{{/match}}{{#match themeSection "black"}} gh-section--theme-black{{/match}}">
    <div class="gh-container">
        {{#if tagName}}
            {{#get "tags" filter="slug:{{tagName}}"}}
                {{#foreach tags}}
                    <h2 class="gh-posts-section__title">
                        <a href="{{url}}" class="gh-posts-section__title-link">{{name}}</a>
                    </h2>
                {{/foreach}}
            {{/get}}
        {{/if}}

        <div class="gh-hero-wrapper--grid gh-hero-wrapper--featured-type-14">
            {{#if tagName}}
                {{#get "posts" limit='12' include="authors,tags" filter="tag:{{tagName}}"}}
                    {{#match posts.length "=" 12}}
                        {{#foreach posts}}

                            {{#if @first}}
                                {{>latest-post type="14-first" lazy="true" classNames="gh-latest-post--first gh-featured-left-post--type-14"}}
                                <div class="gh-featured-post--left-wrapper-type-14">
                            {{/if}}

                            {{#has number="2, 3, 4, 5"}}
                                {{>latest-post type="1" lazy="true" classNames="gh-latest-post--default"}}
                            {{/has}}

                                {{#has number="6"}}
                                </div>
                                {{>featured-main-post type="14" lazy="true" classNames="gh-featured-main-post--one-column gh-featured-main-post--type-14 gh-featured-main-post--no-feat"}}
                            {{/has}}

                            {{#has number="7"}}
                                {{>featured-post type="14" lazy="true" classNames="gh-featured-post--row gh-featured-post--row-reverse gh-featured-sub-post--type-14 gh-post--justify-content-center"}}
                            {{/has}}

                            {{#has number="8"}}
                                {{>latest-post type="14-first" lazy="true" classNames="gh-latest-post--first gh-featured-right-post--type-14"}}
                                <div class="gh-featured-post--right-wrapper-type-14">
                            {{/has}}

                            {{#has number="9, 10, 11, 12"}}
                                {{>latest-post type="1" lazy="true" classNames="gh-latest-post--default"}}
                            {{/has}}

                            {{#if @last}}
                                </div>
                            {{/if}}

                        {{/foreach}}
                    {{else}}
                        <div class="gh-posts--not-enought">{{t "not enough posts"}}</div>
                    {{/match}}
                {{/get}}
            {{else}}
                {{#get "posts" limit='12' include="authors,tags" filter="featured:true" as |featuredPosts|}}
                    {{#match featuredPosts.length "=" 12}}
                        {{#foreach featuredPosts}}

                            {{#if @first}}
                                {{>latest-post type="14-first" classNames="gh-latest-post--first gh-featured-left-post--type-14"}}
                                <div class="gh-featured-post--left-wrapper-type-14">
                            {{/if}}

                            {{#has number="2, 3, 4, 5"}}
                                {{>latest-post type="1" classNames="gh-latest-post--default"}}
                            {{/has}}

                                {{#has number="6"}}
                                </div>
                                {{>featured-main-post type="14" classNames="gh-featured-main-post--one-column gh-featured-main-post--type-14"}}
                            {{/has}}

                            {{#has number="7"}}
                                {{>featured-post type="14" classNames="gh-featured-post--row gh-featured-post--row-reverse gh-featured-sub-post--type-14 .gh-post--justify-content-center"}}
                            {{/has}}

                            {{#has number="8"}}
                                {{>latest-post type="14-first" classNames="gh-latest-post--first gh-featured-right-post--type-14"}}
                                <div class="gh-featured-post--right-wrapper-type-14">
                            {{/has}}

                            {{#has number="9, 10, 11, 12"}}
                                {{>latest-post type="1" classNames="gh-latest-post--default"}}
                            {{/has}}

                            {{#if @last}}
                                </div>
                            {{/if}}
                            
                        {{/foreach}}
                    {{else}}
                        <div class="gh-posts--not-enought">{{t "not enough posts"}}</div>
                    {{/match}}
                {{/get}}
            {{/if}}  
        </div>
    </div>
</section>