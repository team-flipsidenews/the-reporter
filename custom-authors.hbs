{{!< default}}

{{#post}}
<main class="gh-archive-page gh-authors-page gh-container">
    <div class="gh-archive-page-header{{#if feature_image}} with-image{{/if}}">
        <div class="gh-archive-page-header-main">
            <h1 class="gh-archive-page-title">{{title}}</h1>
            {{#if custom_excerpt}}
            <p class="gh-archive-page-excerpt">{{custom_excerpt}}</p>
            {{/if}}
        </div>
        {{#if feature_image}}
        <div class="gh-archive-page-image-wrapper">
            <picture>
                <source srcset="{{img_url feature_image size="1600" format="webp" }} 1600w, {{img_url feature_image
                    size="1000" format="webp" }} 1000w, {{img_url feature_image size="800" format="webp" }} 800w, {{img_url
                    feature_image size="600" format="webp" }} 600w, {{img_url feature_image size="500" format="webp" }} 500w"
                    sizes="(max-width: 900px) 96vw, (max-width: 1480px) 46vw, (min-width: 1481px) 672px" type="image/webp">
                <img class="gh-archive-page-feature-image" srcset="{{img_url feature_image size="1600" }} 1600w, {{img_url feature_image
                    size="1000" }} 1000w, {{img_url feature_image size="800" }} 800w, {{img_url feature_image size="600" }}
                    600w, {{img_url feature_image size="500" }} 500w" sizes="(max-width: 900px) 96vw, (max-width: 1480px) 46vw, (min-width: 1481px) 672px"
                    src="{{img_url feature_image size="1600"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "post image"}}{{/if}}">
            </picture>
        </div>
        {{/if}}
    </div>
    <div class="gh-authors-feed">
        {{#get "authors" include="count.posts" limit="all"}}
        {{#foreach authors}}
        <div class="gh-author-card">
            <a href={{url}} class="gh-author-card-image-wrapper-link" aria-label="{{t "profile image"}}">
                {{#if profile_image}}
                <picture>
                    <source srcset="{{img_url profile_image size="1000" format="webp" }} 1000w, {{img_url profile_image size="800"
                        format="webp" }} 800w, {{img_url profile_image size="600" format="webp" }} 600w, {{img_url profile_image
                        size="500" format="webp" }} 500w"
                        sizes="(max-width: 550px) 97vw, (max-width: 900px) 46vw, (max-width: 1250px) 30vw, (max-width: 1480px) 22vw, (min-width: 1481px) 326px"
                        type="image/webp">
                    <img class="gh-author-card-image" srcset="{{img_url profile_image size="1000"}} 1000w, {{img_url profile_image
                        size="800" }} 800w, {{img_url profile_image size="600" }} 600w, {{img_url profile_image size="500" }} 500w"
                        sizes="(max-width: 550px) 97vw, (max-width: 900px) 46vw, (max-width: 1250px) 30vw, (max-width: 1480px) 22vw, (min-width: 1481px) 326px"
                        src="{{img_url profile_image size="1000"}}" alt="{{name}} {{t "profile image"}}" />
                </picture>
                {{else}}
                <div class="gh-author-card-image-plug">
                    {{> icons/author-plug-icon}}
                </div>
                {{/if}}
            </a>
            <div class="gh-author-card-content">
                <div class="gh-author-card-content-main">
                    <h2 class="gh-author-card-title">
                        <a href={{url}} class="gh-author-card-title-link" aria-label="{{name}}">{{name}}</a>
                    </h2>
                    {{#if bio}}
                    <p class="gh-author-card-bio">
                        {{bio}}
                    </p>
                    {{/if}}
                </div>
                <div class="gh-author-card-meta">
                    <span class="gh-author-card-posts-count">
                        {{plural count.posts empty=(t "No Posts") singular=(t "% Post") plural=(t "% Posts")}}
                    </span>
                    {{#if location}}
                    <div class="gh-author-card-author-location">
                        {{>icons/location-icon}}
                        <span>{{location}}</span>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/foreach}}
        {{/get}}
    </div>
</main>
{{/post}}